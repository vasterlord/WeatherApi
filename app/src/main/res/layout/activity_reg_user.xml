<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"


    tools:context=".activity.RegisterUserActivity">

   <include
       android:id="@+id/app_bar"
       layout="@layout/app_bar"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true" />


   <LinearLayout
       android:id="@+id/linearLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_marginTop="70dp"
       android:weightSum="1">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="Login"
          android:id="@+id/tvLoginRegister"
          android:layout_marginLeft="20dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/et_register_login"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp" />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="UserName"
          android:id="@+id/textView3"
          android:layout_marginLeft="20dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/et_register_user_name"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="City"
          android:id="@+id/tvCity"
          android:layout_marginLeft="20dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/et_city_register"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="Password"
          android:id="@+id/textView2"
          android:layout_marginLeft="20dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/et_register_password"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="Confirm password"
          android:id="@+id/tv_confirm_password"
          android:layout_marginTop="2dp"
          android:layout_marginLeft="20dp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/et_confirm_password"
          android:layout_marginTop="2dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp" />

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_weight="0.05">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/iv_camera"
             android:layout_weight="1"
             android:src="@android:drawable/ic_menu_camera"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:text="Upload Photo"
             android:id="@+id/textView4"
             android:textSize="25dp" />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/iv_galery"
             android:layout_weight="1"
             android:src="@android:drawable/ic_menu_gallery"/>/>
      </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.08"
          android:layout_marginTop="10dp">

         <ImageView
             android:src="@drawable/ic_done_white_24dp"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:id="@+id/iv_ok_register"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_weight="1" />

         <ProgressBar
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/progressBarRegister"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/app_bar"
             android:visibility="visible"
             android:layout_weight="1.33"
             android:backgroundTintMode="src_atop"
             style="@style/AlertDialog.AppCompat" />

         <ImageView
             android:src="@drawable/ic_clear_white_24dp"
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:id="@+id/iv_cancel_register"
             android:layout_marginRight="20dp"
             android:layout_marginLeft="20dp"
             android:layout_weight="1" />
      </LinearLayout>

   </LinearLayout>


</RelativeLayout>
